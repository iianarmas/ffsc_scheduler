#:set purple 93/255, 21/255, 254/255, 1

<ScheduleViewCard>:
    id: schedule_cards
    orientation: 'vertical'
    padding: '12dp'
    spacing: '24dp'
    size_hint: 1, None
    height: dp(500)
    max_height: dp(600)

    MDBoxLayout:
        id: event_container
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: '24dp'
        MDLabel:
            id: preacher_name
            text: root.preacher_name
            font_style: 'H4'
        MDBoxLayout:
            id: event
            size_hint_y: None
            height: self.minimum_height
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: date
                text: '[b]Date:  [/b]' + root.date
                markup: True
        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: time
                text: '[b]Time:  [/b]' + root.time
                markup: True
        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: topic
                text: '[b]Topic:  [/b]' + root.topic
                markup: True
        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: topic_details
                text: '[b]Topic Details:  [/b]' + root.topic_details
                markup: True
        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: substitute_preacher
                text: '[b]Substitute Preacher:  [/b]' + root.substitute_preacher
                markup: True

        MDSeparator:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: 0.8
        MDBoxLayout:
        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: opening_prayer
                text: '[b]Opening Prayer:  [/b]' + root.opening_prayer
                markup: True

        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: scripture_reading
                text: '[b]Scripture Reading:  [/b]' + root.scripture_reading
                markup: True

        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: offertory
                text: '[b]Offertory:  [/b]' + root.offertory
                markup: True

        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                id: closing_prayer
                text: '[b]Closing Prayer:  [/b]' + root.closing_prayer
                markup: True

        MDBoxLayout:
            padding: '40dp'
            MDLabel:
                text: '[b]Event Details:  [/b]' + root.event_details
                markup: True


