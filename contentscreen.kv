<MainContent>:
    name: 'maincontentscreen'

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: home_toolbar
            title: root.title
            left_action_items: [['arrow-left', lambda x: app.home_screen()]]
            #right_action_items: [['dots-vertical', lambda x: app.create_new(x)]]
            pos_hint: {'x': 0,'top':1}
            md_bg_color: purple

        MDRelativeLayout:
            ScrollView:
                padding: "24dp"
                MDStackLayout:
                    id: schedules
                    orientation: 'lr-tb'
                    spacing: '24dp'
                    padding: '32dp'
                    size_hint_x: 1
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
